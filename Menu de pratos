#include <stdio.h>

int main(){

int escolha;

do{
printf("\nMenu de pratos: \n \n");
printf("Escolha um dos seguintes pratos: \n");
printf("1 - Carbonara; \n");
printf("2 - Strogonff;\n");
printf("3 - Lasanha;\n");
printf("4 - Torta;\n");
printf("5 - Sair. \n");
printf("OBS: Digite apenas o numero da opcao que desejar.\n");
scanf("%d", &escolha);

if(escolha == 1)
    printf("\nCarbonara escolhido.\n");
else if(escolha == 2)
    printf("\nStrogonoff escolhido.\n");
else if(escolha == 3)
    printf("\nLasanha escolhido.\n");
else if(escolha == 4)
    printf("\nTorta escolhido.\n");
else if(escolha == 5){
    printf("\nSaindo do programa");
    break;
    }}while (escolha != 5);
   

}
